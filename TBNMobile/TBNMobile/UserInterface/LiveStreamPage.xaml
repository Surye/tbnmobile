<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TBNMobile.UserInterface.LiveStreamPage"
             Title="Live Streaming"
             Icon="live.png">
  <StackLayout Orientation="Vertical" VerticalOptions="Center">
    <Image Source="live_logo.png"/>
     <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
      <Image Source="play.png" HeightRequest="100" WidthRequest="100" x:Name="btnStartStreaming"/>
      <Image Source="pause.png" HeightRequest="100" WidthRequest="100" x:Name="btnPauseStreaming"/>
      <Image Source="stop.png" HeightRequest="100" WidthRequest="100"  x:Name="btnStopStreaming"/>
    </StackLayout>
  </StackLayout>
</ContentPage>